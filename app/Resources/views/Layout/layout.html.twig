<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {%  block add_jquery%}{% endblock %}
        <title>{% block title %} My Application{% endblock %}</title>
        {% block add_css %}{% endblock %}
        {{ include('Base/base_view.html.twig') }}
    </head>
    {% block body %}
    <body>
        <div class="header">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <h3>{% block page_header %}{% endblock %}</h3>
                </div>
                <div class="col-md-4">
                    {% block button %}{% endblock %}
                </div>
            </div>
        </div>
        <div class="container">
            {% block content %}{% endblock content %}
        </div>
    </body>
    {% endblock %}
</html>
